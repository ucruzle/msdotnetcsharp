<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ClubeDoPedido.Mobile.Componentes"
             x:Class="ClubeDoPedido.Mobile.Template.usuario.esqueceuSenha.EsqueceuSenha">
  <ScrollView>
    <StackLayout BackgroundColor="{Binding ColorPrimary}" VerticalOptions="FillAndExpand" Spacing="0">
      <!--Imagem Usuário-->
      <controls:CircleImage WidthRequest ="90"
                            HeightRequest="90"
                            Margin="20"
                            Aspect="AspectFit"
                            HorizontalOptions="LayoutOptions.Center"
                            VerticalOptions="LayoutOptions.Center"
                            Source="usuario.jpg" />

      <!--Rótulo-->
      <Label Text="Recuperar Senha"
             TextColor="White"
             FontSize="20"
             HorizontalOptions="Center"/>
    </StackLayout>
  </ScrollView>
</ContentPage>