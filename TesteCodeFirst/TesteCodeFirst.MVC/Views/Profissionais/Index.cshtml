@model IEnumerable<TesteCodeFirst.Entities.ResumoDadosProfissional>

<h2>Consulta a Profissionais cadastrados</h2>

<p>
    @Html.ActionLink("Incluir Novo Profissional", "Inserir")
</p>
@if (Model.Count() > 0)
{
    <table style="width: 100%;">
        <tr>
            <th style="width: 130px;">
                CPF
            </th>
            <th>
                Nome do Profissional
            </th>
            <th style="width: 230px;">
                Ocupação
            </th>
            <th style="width: 80px; text-align: right;">
                Valor Hora
            </th>
            <th style="width: 120px; text-align: right;">
                Valor Mensal (168 horas)
            </th>
            <th style="width: 150px; text-align: center;">
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CPF
                </td>
                <td>
                    @item.NmProfissional
                </td>
                <td>
                    @item.DsOcupacao
                </td>
                <td style="text-align: right;">
                    @String.Format("{0:#,##0.00}", item.VlHora)
                </td>
                <td style="text-align: right;">
                    @String.Format("{0:#,##0.00}", item.VlBase168Horas)
                </td>
                <td style="text-align: center;">
                    @Html.ActionLink("Editar",
                         "Editar", new { id = item.Id }) |
                    @Html.ActionLink("Excluir",
                         "Excluir", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>
        Não foi encontrado nenhum Profissional
        cadastrado na base de dados.
    </p>
}